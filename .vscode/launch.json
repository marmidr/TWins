    "version": "0.2.0",
    "configurations": [
        {
            "name": "(msys2) Debug Demo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\bin\\TWinsDemo.exe",
            // "args": ["--cli"],
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\usr\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}